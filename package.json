{
  "name": "webshop",
  "version": "1.0.0",
  "description": "MERN webshop app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "build": "npm run build --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",    
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "test": "npm run test:frontend && npm run test:backend",
    "test:backend": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config backend/jest.config.cjs --testPathPattern=backend",
    "test:frontend": "npm run test --prefix frontend -- --watchAll=false",
    "security:test": "npx snyk test",
    "security:monitor": "npx snyk monitor",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && CI=false npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "\u001b[D\u001b[D\u001b[D\u001b[D\u001b[3~\u001b[3~\u001b[3~.git\u001b[C\u001b[C\u001b[3~\u001b[C\u001b[C\u001b[)"
  },
  "author": "SilvesterSpath",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.22.0",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.13.6",
    "morgan": "^1.10.1",
    "multer": "^2.0.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.3.4"
  },
  "overrides": {
    "fast-xml-parser": "5.3.6"
  }
}
